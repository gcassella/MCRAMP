{
    "moderator" : {
        "linear" : true,
        "Source" : {
            "source": true,
            "position" : [0.0, 0.0, 0.0],
            "moderator_kernel": {
                "name": "MCont",
                "mod_dim": [0.01, 0.01],
                "target_dim": [0.01, 0.01],
                "target_dist": $L1$,
                "E_min": $0.99*Ei$,
                "E_max": $1.01*Ei$,
                "T1" : 216.8,
                "I1" : 1.24e13,
                "T2" : 33.9,
                "I2" : 1.02e13,
                "T3" : 16.7,
                "I3" : 3.0423e12
            }
        }
    },

    "sample_area": {
        "linear" : false,
        "multi" : 7,

        "sample_can_and_bucket" : {
            "position" : [0.0, 0.0, $L1$],
            "geom_kernel" : {
                "name": "GMesh",
                "filename": "combined.stl",
                "interior": true
            },
            "scat_kernel": {
                "name": "SPowderN",
                "d_spacing": [2.338, 2.0248, 1.4317, 1.221],
                "pack" : 1.0,
                "vc" : 85,
                "F2" : [21.3, 16.105, 8.327, 6.22],
                "sigma_abs": 0.231,
                "multiplicity" : [8, 6, 12, 24],
                "DW" : 1,
                "transmit": 1
            }
        },

        "sample_can_and_bucket_ext" : {
            "position" : [0.0, 0.0, $L1$],
            "geom_kernel" : {
                "name": "GMesh",
                "filename": "combined.stl"
            },
            "scat_kernel": {
                "name": "SPowderN",
                "d_spacing": [2.338, 2.0248, 1.4317, 1.221],
                "pack" : 1.0,
                "vc" : 85,
                "F2" : [21.3, 16.105, 8.327, 6.22],
                "sigma_abs": 0.231,
                "multiplicity" : [8, 6, 12, 24],
                "DW" : 1,
                "transmit": 1
            }
        },

        "Sample" : {
            "position" : [0.0, 0.0, $L1$],
            "geom_kernel" : {
                "name" : "GSphere",
                "radius": 0.01
            },
            "scat_kernel": {
                "name": "SIsotropic",
                "fn_coh": "$sample$",
                "fn_inc": "delta.sqw",
                "temperature": 150,
                "transmit": 1
            }
        },

        "Detector" : {
            "position" : [0.0, 0.0, 0.0],
            "relative" : "Sample",
            "geom_kernel" : {
                "name" : "GBanana",
                "radius" : $radius$,
                "height" : $2*height$,
                "mintheta" : -40.0,
                "maxtheta" : 140.0
            },
            "scat_kernel" : {
                "name" : "SDetectorPix",
                "y_binning" : $y_binning$,
                "theta_binning" : $theta_binning$,
                "tof_binning" : $tof_bin$,
                "filename" : "detector",
                "restore_neutron": false
            }
        }
    }
}